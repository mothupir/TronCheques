{
  "compileOnSave": false,
  "compilerOptions": {
    //  Type Checking
    "strict": true,

    //  Modules
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "root",

    //  Emit
    "downlevelIteration": true,
    "importHelpers": true,
    "newLine": "LF",
    "outDir": "out",
    "sourceMap": true,

    //  Interop Constraints
    "esModuleInterop": true,
    "isolatedModules": true,

    //  Language and Environment
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    "jsx": "preserve",
    "target": "ESNext",

    //  Projects
    "composite": true,

    //  Completeness
    "skipLibCheck": true
  },
  "include": ["root/**/*.ts"],
  "ts-node": { "esm": true, "files": true, "transpileOnly": true }
}
